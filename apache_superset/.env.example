# Apache Superset Docker Configuration

# Docker Compose Project Name
COMPOSE_PROJECT_NAME=apache-superset

# ========================================
# Superset Settings
# ========================================
# Container settings
SUPERSET_CONTAINER_NAME=superset
SUPERSET_HOSTNAME=docker_superset

# Port mapping (external port only)
SUPERSET_PORT=22410

# Secret key (CHANGE THIS IN PRODUCTION!)
# Generate with: openssl rand -base64 42
SUPERSET_SECRET_KEY=your_secret_key_change_me_in_production

# Load example data (true/false)
SUPERSET_LOAD_EXAMPLES=false

# Resource limits
SUPERSET_CPU_LIMIT=2.0
SUPERSET_MEMORY_LIMIT=2G
SUPERSET_CPU_RESERVATION=0.5
SUPERSET_MEMORY_RESERVATION=512M

# ========================================
# Superset Admin User
# ========================================
SUPERSET_ADMIN_USERNAME=admin
SUPERSET_ADMIN_PASSWORD=admin_password_change_me
SUPERSET_ADMIN_FIRSTNAME=Admin
SUPERSET_ADMIN_LASTNAME=User
SUPERSET_ADMIN_EMAIL=admin@example.com

# ========================================
# Celery Worker Settings
# ========================================
SUPERSET_WORKER_CONTAINER_NAME=superset_worker
SUPERSET_WORKER_HOSTNAME=docker_superset_worker
CELERY_WORKER_CONCURRENCY=2

# Worker resource limits
WORKER_CPU_LIMIT=2.0
WORKER_MEMORY_LIMIT=2G
WORKER_CPU_RESERVATION=0.25
WORKER_MEMORY_RESERVATION=256M

# ========================================
# Celery Beat Settings
# ========================================
SUPERSET_BEAT_CONTAINER_NAME=superset_beat
SUPERSET_BEAT_HOSTNAME=docker_superset_beat

# Beat resource limits
BEAT_CPU_LIMIT=0.5
BEAT_MEMORY_LIMIT=512M
BEAT_CPU_RESERVATION=0.1
BEAT_MEMORY_RESERVATION=128M

# ========================================
# Init Container Settings
# ========================================
SUPERSET_INIT_CONTAINER_NAME=superset_init

# ========================================
# PostgreSQL Settings
# ========================================
# Container settings
POSTGRES_CONTAINER_NAME=superset_postgres
POSTGRES_HOSTNAME=docker_superset_postgres

# Database credentials (CHANGE THESE IN PRODUCTION!)
POSTGRES_USER=superset
POSTGRES_PASSWORD=superset_password_change_me
POSTGRES_DB=superset

# Port mapping (external port only)
POSTGRES_PORT=22411

# PostgreSQL init args
POSTGRES_INITDB_ARGS=--encoding=UTF-8 --locale=C

# Shared memory size
POSTGRES_SHM_SIZE=256mb

# Resource limits
POSTGRES_CPU_LIMIT=2.0
POSTGRES_MEMORY_LIMIT=2G
POSTGRES_CPU_RESERVATION=0.5
POSTGRES_MEMORY_RESERVATION=512M

# ========================================
# Redis Settings
# ========================================
# Container settings
REDIS_CONTAINER_NAME=superset_redis
REDIS_HOSTNAME=docker_superset_redis

# Port mapping (external port only)
REDIS_PORT=22412

# Resource limits
REDIS_CPU_LIMIT=1.0
REDIS_MEMORY_LIMIT=512M
REDIS_CPU_RESERVATION=0.1
REDIS_MEMORY_RESERVATION=128M

# ========================================
# Network Settings
# ========================================
# Network name
NETWORK_NAME=superset.internal

# IPAM settings
NETWORK_SUBNET=10.225.0.0/16
NETWORK_GATEWAY=10.225.0.1

# ========================================
# Linux/System Settings
# ========================================
# Timezone
TZ=Asia/Tokyo

# Locale settings
LANG=ja_JP.UTF-8
LC_ALL=ja_JP.UTF-8
LANGUAGE=ja_JP:ja

# Character encoding
LC_CTYPE=ja_JP.UTF-8
LC_COLLATE=ja_JP.UTF-8
